<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/stops_linear_parent_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:padding="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/stops_linear_parent_vertical_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stop_type"
            android:text=""
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/stop_street"
            android:text=""
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"/>
        <TextView
            android:id="@+id/stop_city"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"/>
        <TextView
            android:id="@+id/stop_state"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"/>
        <TextView
            android:id="@+id/stop_zip"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stops_linear_parent_vertical_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/arrive_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp" />

        <Button
            android:id="@+id/loaded_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp" />

    </LinearLayout>

</LinearLayout>